{
  "rules": {
    "messages": {
      ".read": true,

      "$mid": {
        ".write": "auth != null && !data.exists()",

        "text": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "time": {
          ".validate": "newData.isNumber() && (now - 1000) < newData.val() && newData.val() < (now + 1000)"
        },
        "uid": {
          ".validate": "newData.val() === auth.uid"
        }
      }
    }
  }
}
